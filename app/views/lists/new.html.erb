<h1>新規投稿</h1>
<% if @list.errors.any? %>
<!--errorsは、発生したエラーの内容を確認できるメソッド-->
<!--any? と組み合わせることで、エラーが発生しているかどうかを判定できます。-->
  <%= @list.errors.count %>件のエラーが発生しました
  <ul>
    <!--full_messagesと組み合わせることで、エラーの内容を出力できます。-->
    <!-- エラー文は配列で保存されているため、eachを使います。-->
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!-- form_with部分 -->
<%= form_with model: @list, url: '/lists', method: :post do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %> <!-- accept: "image/*"を使い、画像ファイルしか投稿できないようにする -->

  <%= f.submit '投稿' %>
<% end %>
