<h1>投稿一覧</h1>

<% @lists.each do |list| %>

  <p>タイトル</p>

  <span>
    <%= link_to list.title, list_path(list.id) %>
  </span>

  <p>画像</p>
  <% if list.image.attached? %> <!--.attached?というimageが存在するか確認-->
  <!-- HTMLのimgタグを生成するimage_tagヘルパーを使う -->
    <%= image_tag list.image, size: "200x200" %> <!--画像がある場合-->
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>　<!--画像がない場合-->
  <% end %>
  
<% end %>